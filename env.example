# Shopify OAuth Configuration
# Copy this file to .env and fill in your actual values

# Your Shopify App Credentials (from Shopify Partners dashboard)
VITE_SHOPIFY_API_KEY=your_api_key_here
VITE_SHOPIFY_API_SECRET=your_api_secret_here

# OAuth Configuration
VITE_SHOPIFY_REDIRECT_URI=http://localhost:5173/shopify/callback
VITE_SHOPIFY_ENCRYPTION_KEY=your_custom_encryption_key_here

# Production Settings (update these for production)
# VITE_SHOPIFY_REDIRECT_URI=https://yourdomain.com/shopify/callback

# App Configuration
VITE_APP_NAME=WAW Energy
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Security Settings
VITE_OAUTH_STATE_EXPIRY=3600000
VITE_TOKEN_EXPIRY=86400000
VITE_MAX_OAUTH_ATTEMPTS=5
VITE_OAUTH_WINDOW=900000

# Analytics and Monitoring (optional)
VITE_ANALYTICS_ID=your_analytics_id
VITE_ERROR_REPORTING_URL=your_error_reporting_url
